<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp">

        <include
            android:id="@+id/child_container"
            layout="@layout/layout_child"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/description"
            style="@style/DescriptionText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="26dp"
            android:text="@string/select_reason"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/child_container" />

        <androidx.cardview.widget.CardView
            android:id="@+id/subject_spinner_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:foreground="?attr/selectableItemBackground"
            app:cardElevation="0dp"
            app:layout_constraintTop_toBottomOf="@id/description">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_rounded_grey"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="19dp"
                    android:src="@drawable/ic_book" />

                <Spinner
                    android:id="@+id/subject_spinner"
                    android:layout_width="match_parent"
                    android:layout_height="40dp" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/day_spinner_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:foreground="?attr/selectableItemBackground"
            app:cardElevation="0dp"
            app:layout_constraintTop_toBottomOf="@id/subject_spinner_container">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_rounded_grey"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="19dp"
                    android:src="@drawable/ic_syllabus" />

                <Spinner
                    android:id="@+id/day_spinner"
                    android:layout_width="match_parent"
                    android:layout_height="40dp" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/reason_spinner_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:foreground="?attr/selectableItemBackground"
            app:cardElevation="0dp"
            app:layout_constraintTop_toBottomOf="@id/day_spinner_container">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_rounded_grey"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="19dp"
                    android:src="@drawable/ic_help_circle_1" />

                <Spinner
                    android:id="@+id/reason_spinner"
                    android:layout_width="match_parent"
                    android:layout_height="40dp" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/additional_field_description"
            style="@style/DescriptionText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="28dp"
            android:text="@string/additional_field"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/reason_spinner_container" />

        <FrameLayout
            android:id="@+id/additional_field_edit_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/additional_field_description">

            <EditText
                android:id="@+id/additional_field_edit"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:background="@drawable/bg_rounded_grey"
                android:gravity="top"
                android:hint="@string/enter_message"
                android:paddingStart="17dp"
                android:paddingTop="10dp"
                android:paddingEnd="38dp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginTop="11dp"
                android:layout_marginEnd="17dp"
                android:src="@drawable/ic_edit" />
        </FrameLayout>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/send_btn"
            style="@style/ButtonStyle"
            android:layout_width="match_parent"
            android:layout_height="37dp"
            android:layout_marginTop="24dp"
            android:enabled="false"
            android:text="@string/send_message"
            app:layout_constraintTop_toBottomOf="@id/additional_field_edit_container" />

        <ProgressBar
            android:id="@+id/progress_bar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="invisible"
            app:layout_constraintBottom_toBottomOf="@id/send_btn"
            app:layout_constraintEnd_toEndOf="@id/send_btn"
            app:layout_constraintStart_toStartOf="@id/send_btn"
            app:layout_constraintTop_toTopOf="@id/send_btn" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>
